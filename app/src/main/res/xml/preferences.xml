<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Automated Response">

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_location_24"
            app:key="@string/pref_alert"
            app:summary="Play audio alert"
            app:title="Audio alert" />

        <Preference
            app:icon="@drawable/ic_contact_24"
            app:key="@string/pref_emergency_contact"
            app:summary="Who to contact when drunk"
            app:title="Emergency Contact" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_sms_24"
            app:key="@string/pref_sms"
            app:summary="Send SMS to emergency contact"
            app:title="SMS" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_call_24"
            app:key="@string/pref_call"
            app:summary="Call emergency contact"
            app:title="Call" />

        <EditTextPreference
            app:icon="@drawable/ic_contact_24"
            app:key="@string/pref_drop_off_location"
            app:summary="Uber drop off location"
            app:title="Drop Off Location" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:icon="@drawable/ic_car_24"
            app:key="@string/pref_uber"
            app:summary="Order an Uber at current location"
            app:title="Order an Uber" />
    </PreferenceCategory>
</PreferenceScreen>